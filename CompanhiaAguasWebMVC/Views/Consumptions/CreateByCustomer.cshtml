@model CompanhiaAguasWebMVC.Data.Entities.Consumption
@{
    ViewData["Title"] = "CreateByCustomer";
}

<h1>Adicionar novo consumo</h1>


<div style="text-align:center; font-size:larger" class="text-danger">
    <p>
        @ViewBag.Message
    </p>
</div>

<h4>Consumo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateByCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <input asp-for="ClientId" readonly class="form-control"/>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <div class="input-group date" data-provide="datepicker">
                    <input type="text" asp-for="DateTime" class="form-control" />
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    </div>
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                @*<label asp-for="DateTime" class="control-label"></label>
                    <input asp-for="DateTime" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="ConsumptionsClient" class="btn btn-success">Back to List</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function)(){
            $('.date').datetimepicker({
                orientation: "bottom",
                autoclose: true,
                dateFormat: "dd-mm-yy",
                changemonth: true,
                changeyear: true

            }
        });
    </script>
}

